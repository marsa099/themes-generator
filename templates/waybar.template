* {
  font-family: "GeistMono NF", "GeistMono Nerd Font", "Geist Mono", monospace;
  font-size: 16px;
  min-height: 0;
  border: none;
  border-radius: 0;
}

window#waybar {
  background: transparent;
}

/* Left side modules */
.modules-left {
  background: alpha({{background.secondary}}, 0.85);
  border-radius: 8px;
  margin: 4px 8px 4px 20px;
  padding: 0px 8px;
}

#clock.date,
.modules-left #custom-weather {
  padding: 6px 12px;
  margin: 0;
  background: transparent;
  color: {{foreground.primary}};
  border-radius: 0;
}

.modules-left #custom-weather {
  color: {{accent.cyan}};
}

#cpu,
#memory {
  padding: 6px 12px;
  margin: 0;
  background: transparent;
  color: {{foreground.primary}};
  border-radius: 0;
}

#cpu.medium,
#memory.medium {
  color: {{accent.yellow}};
}

#cpu.elevated,
#memory.elevated {
  color: {{accent.orange}};
}

#cpu.critical,
#memory.critical {
  color: {{accent.red}};
}

#custom-screencast {
  padding: 6px 12px;
  margin: 0;
  background: transparent;
  color: #ff4444;
  border-radius: 0;
  animation: pulse 2s steps(2) infinite;
}

#custom-screencast.inactive {
  padding: 0;
  margin: 0;
  min-width: 0;
  animation: none;
}

#custom-camera {
  padding: 6px 12px;
  margin: 0;
  background: transparent;
  color: #ff4444;
  border-radius: 0;
  animation: pulse 2s steps(2) infinite;
}

#custom-camera.inactive {
  padding: 0;
  margin: 0;
  min-width: 0;
  animation: none;
}

@keyframes pulse {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.3;
  }
  100% {
    opacity: 1;
  }
}

/* Center module */
.modules-center {
  background: alpha({{background.secondary}}, 0.85);
  border-radius: 8px;
  margin: 4px 8px;
  padding: 0px 8px;
}

#custom-niri-minimap {
  padding: 6px 12px;
  margin: 0;
  background: transparent;
  color: {{foreground.primary}};
  border-radius: 0;
  font-size: 16px;
}

#custom-discord-notifications,
#custom-teams-notifications {
  padding: 6px 12px;
  margin: 0;
  background: transparent;
  color: #5865F2;
  border-radius: 0;
  font-size: 16px;
}

#custom-discord-notifications.empty,
#custom-teams-notifications.empty {
  padding: 0;
  margin: 0;
  min-width: 0;
}

/* Right side container - all items grouped */
.modules-right {
  background: alpha({{background.secondary}}, 0.85);
  border-radius: 8px;
  margin: 4px 20px 4px 8px;
  padding: 0px 8px;
}

#clock,
#battery,
#network,
#pulseaudio {
  padding: 6px 12px;
  margin: 0;
  background: transparent;
  color: {{foreground.primary}};
  border-radius: 0;
}

#battery.warning {
  color: {{accent.yellow}};
}

#battery.critical {
  color: {{accent.red}};
}

#battery.charging {
  color: {{accent.green}};
}

#clock {
  color: {{accent.blue}};
}

#network {
  color: {{accent.green}};
}

#network.disconnected {
  color: {{accent.red}};
}

#pulseaudio.speaker {
  color: {{accent.blue}};
}

#pulseaudio.speaker.muted {
  color: {{accent.cyan}};
}

#pulseaudio.mic {
  color: {{accent.blue}};
}

#pulseaudio.mic.source-muted {
  color: {{accent.cyan}};
}

#custom-dnd {
  padding: 6px 12px;
  margin: 0;
  background: transparent;
  border-radius: 0;
}

#custom-dnd.active {
  color: {{accent.purple}};
}

#custom-dnd.inactive {
  color: {{foreground.muted}};
}

tooltip {
  background: alpha({{background.secondary}}, 0.95);
  border: 1px solid alpha({{accent.cyan}}, 0.2);
  border-radius: 8px;
}

tooltip label {
  color: {{foreground.primary}};
}
